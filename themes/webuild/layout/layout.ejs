<body>
  <!-- 网站名 -->
  <header>
    <div class="mobileBox">
      <div class="brandBox">
        <a href="/" class="d-flex align-items-center">
          <h1 class="m-0">
            <%= config.title %>
          </h1>
        </a>

      </div>
      <a href="#" id="barBtn"><i class="fa-solid fa-bars"></i></a>
    </div>


  </header>
