          <li>
            <h4>
              <a href="#" id="categoriesBtn">文章分類 <i class="fa-solid fa-square-caret-up"></i></a>
            </h4>
            <div id="categories">
              <%- list_categories() %>
            </div>
          </li>
          <li>
            <h4>
              <a href="#" id="tagsBtn">文章標籤 <i class="fa-solid fa-square-caret-up"></i></a>
            </h4>
            <div id="tags"><%- tagcloud({amount:
                30,color:true,start_color:"rgba(0,0,0,1)",end_color:"rgba(255,25,25,1)"}) %></div>
          </li>
        </ul>
        <%- search_form({class:"input-group",button:true}) %>
      </nav>
    </aside>

    <%- body %>
      <% if(is_post()){ %>
        <aside class="rightAside">
          <section>
            <h4>文章大綱</h4>
            <%- toc(page.content,{list_number:false}) %>
          </div>
        </section>
        <% } %>

  </div>



