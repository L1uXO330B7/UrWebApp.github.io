@import url('https://fonts.googleapis.com/css2?family=IBM+Plex+Mono:wght@700&display=swap');

$font-size = 4px;
$theme-background-color = convert(hexo-config('theme_style.background'));
$theme-light = convert(hexo-config('theme_style.light'));
$theme-dark = convert(hexo-config('theme_style.dark'));
$theme-primary = convert(hexo-config('theme_style.primary'));
$theme-secondary = convert(hexo-config('theme_style.secondary'));
$header-max-height = 60px;

html {
    animation: fadein 2s;
}

:root {
    scroll-padding-top: $header-max-height + 10px;
}

@keyframes fadein {
    from {
        opacity: 0;
        visibility: hidden;
    }

    to {
        opacity: 1;
        visibility: visible;
    }
}

h2, p {
    margin-top: 1rem;
    margin-bottom: 1.5rem;
}

a {
    color: $theme-secondary;
    text-decoration: none;
    transition: all 0.5s;

    &:hover {
        transition: all 0.5s;
        color: $theme-dark;
    }
}

h1, h2, h3, h4, h5 {
    font-family: 'Noto Sans TC', sans-serif;
}

* .token {
    font-family: Consolas, Monaco, 'Andale Mono', 'Ubuntu Mono', monospace;
}

h1 {
    font-size: $font-size * 7;
}

h2 {
    font-size: $font-size * 6;
}

h3 {
    font-size: $font-size * 5;
}

h4 {
    font-size: $font-size * 4;
}

h5 {
    font-size: $font-size * 3;
}

p {
    font-size: $font-size * 2;
}

body {
    background-color: $theme-background-color;
}

footer {
    background: #36403A;
    padding: 20px 0;

    >p {
        font-size: 12px;
        color: white;
        text-shadow: 1px 3px 3px rgba(0, 0, 0, 0.3);
    }
}

header {
    display: flex;
    height: $header-max-height;
    width: 100%;
    padding: 10px 20px;
    background-color: #dcf2e6;
    position: fixed;
    z-index: 1000;
    box-shadow: 1px 2px 8px rgba(0, 0, 0, 0.5);
}

.brandBox h1 {
    font-weight: 400;
    color: $theme-dark;
}

.main {
    padding-bottom: 50px;
    margin-top: ($header-max-height + 50) px;
}

.leftAside {
    position: fixed;
    background: white;
    box-shadow: 1px 3px 5px rgba(0, 0, 0, 0.2);
    width: 100%;
    display: none;
    padding-top: $header-max-height;
    padding-left: 15px;
    padding-right: 15px;
    padding-bottom: 15px;
    z-index: 1;
}

nav {
    top: $header-max-height;
}

nav>ul {
    padding: 20px 0px;
}

nav>ul>li {
    list-style: none;
}

nav>ul>li>h4 {
    list-style: none;
    margin: 0px;
}

nav>ul>li>h4>a {
    padding: 5px 0;
    display: flex;
    justify-content: space-between;
    text-decoration: none;
    letter-spacing: 0.083em;
    border-bottom: 1px solid rgba(0, 0, 0, 0.1);

    &:hover {
        cursor: pointer;
    }
}

.mobileBox {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
}

#barBtn {
    margin-right: 15px;
    padding: 5px;

    >i {
        font-size: 24px;
    }
}

.infoBox {
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    margin-bottom: 0.5rem;
    border-bottom: 1px solid rgba(0, 0, 0, 0.1);

    >p, span, i {
        font-size: 12px;
        color: gray;
        margin: 2.5px 5px 2.5px 0px;
    }

    p, span, a {
        font-weight: 300;
    }

    >p>a {
        text-decoration: none;
        color: gray;

        &:hover {
            color: black;
        }
    }
}

.card-body {
    padding: 0;
}

.card-text {
    font-size: 14px !important;
    color: black !important;
    margin-top: 15px;

    a {
        color: black !important;
        font-weight: 400 !important;
    }

    img {
        max-width: 100%;
        height: auto;
        margin-top: 1rem;
        margin-bottom: 1.5rem;
    }
}

.card-footer {
    margin-top: 15px;
    background-color: white;
    padding: 0;
    border-top: none;
}

.tagBox>li {
    &:hover {
        >a {
            color: black;

            >i {
                color: black;
            }
        }
    }

    >a {
        font-size: 12px;
        margin-left: 5px;
        text-decoration: none;
        color: gray;
    }
}

.tagBox {
    padding: 0;
    margin: 0;
    display: flex;
    justify-content: flex-end;
    align-items: center;
    flex-wrap: wrap;
}

.tagBox>li {
    list-style: none;
}

.leftAside>ul {
    padding: 0;
    display: flex;
    flex-direction: column;
}

.rightAside {
    display: none;
}

.item {
    padding: 20px 20px 20px 20px;
    border: none !important;
    box-shadow: 1px 2px 5px rgba(0, 0, 0, 0.6);
    margin: 0 10px 25px 10px;
    break-inside: avoid;
    counter-increment: item-counter;

    img {
        padding: 15px 0;
    }
}

.waterfall {
    margin: 0 auto;
    column-count: 1;
    column-gap: 0px;
    counter-reset: item-counter;
}

.outter-wrap {
    min-height: 100vh;
    padding: 0;
    display: flex;
}

.category-list, .toc {
    padding-left: 10px;
    list-style-type: '';
    padding-bottom: 10px;

    li:not(.toc>li) {
        display: flex;
    }

    li {
        font-size: 16px;
        justify-content: space-between;

        a {
            display: block;
            width: 100%;
            color: grey;
        }

        span {
            font-size: 12px;
            margin-left: 5px;
            // background: black;
            color: gray;
            padding: 0px 1.5px;
            border-radius: 5px;
        }

        ol {
            padding-left: 1rem;
        }
    }
}

.postArticle {
    padding: 15px;
    background: white;
    border-radius: 10px;
    box-shadow: 1px 3px 5px rgba(0, 0, 0, 0.2);

    img {
        max-width: 100%;
        height: auto;
        margin-top: 1rem;
        margin-bottom: 1.5rem;
    }
}

.container {
    animation: fall 2s;
}

@keyframes fall {
    from {
        margin-top: 0;
    }

    to {
        margin-top: ($header-max-height + 50) px;
    }
}

.postWrap {
    margin-top: ($header-max-height + 50) px;
    max-width: 800px;
}

.footerInfo {
    display: flex;
    justify-content: space-between;
    align-items: center;

    >p {
        font-size: 12px;
        color: gray;
        margin: 0;
    }
}

.readBtn {
    text-align: center;
    width: 100%;
    font-size: 12px;
    color: black;
    text-decoration: none;
    padding: 5px 5px;
    border-radius: 3px;
    border: 1px solid rgba(0, 0, 0, 0.1);

    &:hover {
        color: white;
        background: gray;
    }
}

#tags {
    padding-left: 10px;
    padding-bottom: 5px;
    display: flex;
    flex-wrap: wrap;

    >a {
        margin-right: 10px;
        line-height: 35px;
        color: grey;

        &:hover {
            color: black;
        }
    }
}

.search-form {
    position: relative;
    display: flex;
    flex-wrap: wrap;
    align-items: stretch;
    width: 100%;

    >input {
        position: relative;
        flex: 1 1 auto;
        width: 1%;
        min-width: 0;
        display: block;
        padding: 0.375rem 0.75rem;
        font-size: 1rem;
        font-weight: 400;
        line-height: 1.5;
        color: #212529;
        background-color: #fff;
        background-clip: padding-box;
        border: 1px solid #ced4da;
        -webkit-appearance: none;
        -moz-appearance: none;
        appearance: none;
        border-radius: 0.375rem;
        transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
    }
}

.card-title {
    margin-bottom: 0;
}

.fa-solid, .fa-eye {
    color: rgba(0, 0, 0, 0.1) !important;
}

#tagsBtn, #categoriesBtn {
    &:hover {
        .fa-solid {
            color: black;
        }
    }
}

.category-list-item {
    padding: 3px 0;

    &:hover {
        a, span {
            color: black;
        }
    }
}

.input-group {
    input, button {
        height: 35px;
        line-height: 1px;
        font-size: 11px;
    }
}

.input-group-input {
    &:focus {
        border-color: #a5a5a5;
        // box-shadow: 0 0 0 0.25rem rgba(92, 92, 92, 0.2);
        box-shadow: none;
    }

    &:-webkit-autofill, &:-webkit-autofill:hover, &:-webkit-autofill:focus, &:-webkit-autofill:active {
        -webkit-box-shadow: 0 0 0 30px white inset !important;
    }
}

.input-group-submit {
    border-radius: 0.375rem !important;
    border-top-left-radius: 0 !important;
    border-bottom-left-radius: 0 !important;
    background-color: #808080;

    &:hover {
        transition: all 0.5s;
    }
}

.rightAside {
    >section {
        >h4 {
            padding: 5px 0;
            display: flex;
            justify-content: space-between;
            text-decoration: none;
            letter-spacing: 0.083em;
            border-bottom: 1px solid rgba(0, 0, 0, 0.1);
        }
    }
}

.toc {
    *>span {
        &:hover {
            color: black;
        }
    }
}

.postNext {
    >h4 {
        margin-top: unset;
        margin-bottom: unset;

        >a {
            color: #808080;

            &:hover {
                color: black;

                >i {
                    color: black;
                }
            }
        }
    }
}

.wl-comment {
    padding: 15px;
    background: #fff;
    border-radius: 10px;
    box-shadow: 1px 3px 5px rgba(92, 92, 92, 0.2);
}

.wl-meta-head, .wl-cards, .wl-loading, .wl-empty, .wl-power {
    padding: 15px;
    background: #fff;
    box-shadow: 1px 3px 5px rgba(92, 92, 92, 0.2);

    &:not(.wl-cards, .wl-loading, .wl-empty) {
        border-radius: 10px;
    }
}

.wl-meta-head {
    border-bottom-left-radius: unset !important;
    border-bottom-right-radius: unset !important;
}

.wl-power {
    margin-bottom: 2rem;
    border-radius: 10px;
    border-top-left-radius: unset !important;
    border-top-right-radius: unset !important;
}

.postArticle {
    h1, h2, h3, h4, h5 {
        display: flex;
        flex-direction: row-reverse;
        justify-content: flex-end;

        &:hover {
            >.headerlink {
                &::after {
                    content: '#';
                    color: rgb(130, 170, 255);
                    padding: 0 0.3rem;
                }
            }
        }
    }

    h1 {
        font-size: $font-size * 10;
    }

    h2 {
        font-size: $font-size * 9;
        padding-bottom: 0.5rem;
        margin-top: 4rem;
        border-bottom: 1px solid rgba(0, 0, 0, 0.1);
    }

    h3 {
        font-size: $font-size * 8;
        padding-bottom: 0.5rem;
        margin-top: 3rem;
        border-bottom: 1px solid rgba(0, 0, 0, 0.1);
    }

    h4 {
        font-size: $font-size * 7;
    }

    h5 {
        font-size: $font-size * 6;
    }

    p {
        font-size: $font-size * 5;
    }

    .infoBox>p {
        font-size: 12px;
    }

    .postArticleContent {
        details {
            border-bottom: 1px dashed black;
            margin-bottom: 2rem;

            >summary {
                padding: 0.8rem;
                font-weight: 500;
            }

            >* {
                font-size: 0.8rem;
            }

            ol, ul {
                border-top: 1px dashed black;

                li {
                    margin-bottom: 1rem;
                }
            }
        }

        ol, ul {
            padding: 1rem 2rem;
            margin-bottom: unset;

            li {
                font-size: 0.8rem;
            }
        }

        p, li {
            >a {
                color: rgb(130, 170, 255);

                &:hover {
                    color: rgb(130, 170, 255);
                    text-decoration: underline;
                }
            }
        }

        blockquote {
            border-left: solid #ccc;
            font-size: 0.8rem;
            padding: 0px 0.8rem;
            font-weight: 500;

            >p {
                margin: 0;
                font-size: 16px;
            }
        }
    }
}

.hamburger {
    color: #979797 !important;
}

@media (min-width: 1080px) {
    .postArticle {
        padding: 15px 40px;
    }

    nav {
        position: sticky;
    }

    .rightAside {
        display: block;
        padding-top: $header-max-height;
    }

    .rightAside>section {
        border-left: 1px dashed rgba(0, 0, 0, 0.3);
        min-width: 285px;
        position: sticky;
        top: $header-max-height + 50px;
        padding-left: 15px;
        padding-right: 15px;

        >ol {
            padding: 0px;
            list-style: none;
        }
    }

    .main {
        margin-top: $header-max-height + 50px;
    }

    .leftAside {
        max-width: 275px;
        position: relative;
        display: block;
        animation: leftopen 2s;
    }

    @keyframes leftopen {
        from {
            max-width: 0;
        }

        to {
            max-width: 275px;
        }
    }

    .waterfall {
        margin: 0 auto;
        column-count: 3;
        column-gap: 0px;
        counter-reset: item-counter;
    }

    #barBtn {
        display: none;
    }

    header {
        padding: 10px 10px 10px 10px;
        background-color: $theme-primary;
        position: fixed;
    }
}

